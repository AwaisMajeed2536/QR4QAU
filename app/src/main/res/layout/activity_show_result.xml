<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="awais.majeed.ui.ShowResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/images_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/result_page_images_margin"
            android:background="@color/white"
            android:padding="@dimen/standard_padding"
            android:weightSum="2">

            <ImageView
                android:id="@+id/university_logo_iv"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_margin="@dimen/result_page_images_margin"
                android:paddingRight="150dp"
                android:paddingBottom="80dp"
                android:layout_weight="1.3"
                android:background="@color/white"
                android:src="@mipmap/university_logo" />

            <ImageView
                android:id="@+id/card_owner_image_iv"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_margin="@dimen/result_page_images_margin"
                android:layout_weight="0.7"
                android:background="@color/white"
                android:src="@mipmap/owner_image_place_holder" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/name_occupation_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/images_wrapper"
            android:background="@color/blue"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/card_owner_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/card_owner_occupation_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/card_owner_contact_tv"
            android:layout_below="@+id/name_occupation_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingRight="80dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/card_owner_address_tv"
            android:layout_below="@+id/card_owner_contact_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingRight="80dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/card_owner_registration_tv"
            android:layout_below="@+id/card_owner_address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingRight="80dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/card_owner_email_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_owner_registration_tv"
            android:layout_marginTop="30dp"
            android:paddingRight="80dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/scan_again_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/card_owner_email_tv"
            android:text="Scan Again" />
    </RelativeLayout>
</ScrollView>
